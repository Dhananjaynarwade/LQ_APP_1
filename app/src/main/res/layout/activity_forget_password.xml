<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".forget_password">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_login_lq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"


            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/karma_semibold"
            android:gravity="center"
            android:text="Forget Password "
            android:textColor="#130606"
            android:inputType="textEmailAddress"
            android:textSize="35sp"
            android:textStyle="bold" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_below="@+id/textview_login_lq"
            android:id="@+id/animation_main"
            android:layout_marginHorizontal="160dp"
            android:layout_gravity="center"

            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            app:lottie_rawRes="@raw/myown"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"

            />


        <EditText

            android:id="@+id/edittext_Loginemail_forgetpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/animation_main"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"



            android:layout_marginBottom="30dp"
            android:background="#C9B9B9"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20dp"


            android:ems="10"
            android:fontFamily="@font/karma_semibold"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="#B61111"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/forgetBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/edittext_Loginemail_forgetpassword"
            android:layout_centerHorizontal="true"


            android:layout_margin="30dp"


            android:background="@drawable/custom_button1"
            android:text="Forget Password"
            android:textAllCaps="false" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progBar_login"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"

            android:visibility="gone"/>
    </RelativeLayout>




